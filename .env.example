# Laravel Translation Sync Configuration

# Translation Service Provider
# Available: libretranslate (free), mymemory (free), google (paid), dummy (testing)
TRANSLATION_SERVICE=libretranslate

# Source language (the language your translation keys are written in)
TRANSLATION_SOURCE_LANG=en

# Target languages (comma-separated list, leave empty to use all app locales)
TRANSLATION_TARGET_LANGS=es,fr,de,it,pt

# Enable automatic translation
TRANSLATION_AUTO_TRANSLATE=true

# Fallback strategy when translation fails
# Options: key (use the key itself), empty (empty string), source (use source value)
TRANSLATION_FALLBACK_STRATEGY=key

# Translation file format: json or php
TRANSLATION_FILE_FORMAT=json

# Google Translate API Configuration (only needed if using google service)
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key-here

# DeepL API Configuration (only needed if using deepl service)
DEEPL_API_KEY=your-deepl-api-key-here
DEEPL_API_URL=https://api-free.deepl.com

# Azure Translator Configuration (only needed if using azure service)
AZURE_TRANSLATOR_KEY=your-azure-translator-key-here
AZURE_TRANSLATOR_REGION=your-azure-region
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com

# AWS Translate Configuration (only needed if using aws service)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-east-1